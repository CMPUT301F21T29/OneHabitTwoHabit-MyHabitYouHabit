<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Displayed_HabitEvent_list"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <ImageView
        android:id="@+id/DisplayUserpicCE"
        android:layout_width="127dp"
        android:layout_height="119dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DisplayLocationCE"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DisplayHabitCE"
        android:layout_width="253dp"
        android:layout_height="63dp"
        android:text="Display habit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/DisplayUserpicCE"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/DisplayCommentCE"
        android:layout_width="152dp"
        android:layout_height="56dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Display comment"
        app:layout_constraintEnd_toStartOf="@+id/DisplayLocationCE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DisplayLocationCE"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:text="Display Location"
        app:layout_constraintEnd_toStartOf="@+id/DisplayUserpicCE"
        app:layout_constraintStart_toEndOf="@+id/DisplayCommentCE"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>